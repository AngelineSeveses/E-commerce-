						<h3><%=  i.title %></h3>
						<hr>
						<h2>PHP <%=  i.price %></h2>
						<ul class="list">
							<li><a class="active" href="#"><span>Category</span> : <%=  i.category %></a></li>
							<li><a href="#"><span>Stocks</span> : <%=  i.quantity %></a></li>
						</ul>
						<p><%= i.description %> </p>
						<form action="/useraddtocart" method="post">
