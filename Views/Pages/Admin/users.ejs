</head>

<body>

  <header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between" style="text-decoration: none;">
      <a class="logo d-flex align-items-center" style="text-decoration: none;">
        <img src="img/logo1.png" alt="" style="height: 50px; width: 50px">
        <span class=" fs-5" style="text-decoration: none;">Shop Now!</span>
      </a>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->

    

    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">
        <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <form class="d-flex" role="search">
                <a class="btn btn-outline-dark" href="/logout" role="button">Log out</a>
            </form>
          </a><!-- End Profile Iamge Icon -->

         

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/adminhome">  <i class="bi bi-border-all"></i> Home</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="/users"> <i class="bi bi-person-bounding-box"></i> User</a>
            </li>
            <li class="nav-item">
            <a class="nav-link" href="/listofbuyitem">  <i class="bi bi-bag"></i> Purchased Item</a>
            </li>
        </ul>
  </aside><!-- End Sidebar-->


  <main id="main" class="main">

    <% if(message!="") {%>
        <div class="alert alert-success text-center" role="alert">
            <p><%= message %>&nbsp;&nbsp;&nbsp;<a class="btn btn-primary" href="/users" role="button">ok</a></p>
        </div>
    <% } %> 
    <div class="pagetitle">
        <h1>Users Page</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Users</a></li>
            <li class="breadcrumb-item active">Users</li>
          </ol>
        </nav>
      </div><!-- End Page Title -->
    <div class="row">
       
   
    <div class="row justify-content-center mt-2">
        <div class="card">
            <div class="card-header">
                <p class="display-5 text-center">
                    All Users
                </p>
            </div>
            <div class="card-body">
                <table id="example" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Fullname</th>
                            <th>Usertype</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% alluser.forEach(item => { %>
                            <tr>
                                <td><%- item.user_id %> </td>
                                <td><%- item.fullname %> </td>
                                <td><%- item.usertype %> </td>
                                <td>
                                    <% if (item.restriction == "1"){ %> 
                                    <a class="btn btn-success" href="/unrestrictaccount/<%- item.user_id %>" role="button">Unrestrict</a>
                                    <%}else{ %> 
                                    <a class="btn btn-danger" href="/restrictaccount/<%- item.user_id %>" role="button"> <i class="bi bi-exclamation-circle"></i> Restrict</a>
                                    <% } %>     
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>User ID</th>
                            <th>Fullname</th>
                            <th>Usertype</th>
                            <th>Action</th>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
  <!-- Add Item -->
    <form action="/addcategory" method ="post">
        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                <div class="form-group mt-2">
                    <label for="d_quantity">Category</label>
                    <input type="text" id="d_quantity" name="category" class="form-control" required>
                </div>

                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </div>
            </div>
        </div>
    </form>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
 
              
        
  </main><!-- End #main -->

  
  

